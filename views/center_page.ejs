<%- include ("partials/header") %>

    <div class="container" style="width: 100%;">
        <h1 style="font-weight: 300;"><b>
            <%=center.name %>
        </b></h1>
    <hr>
        <div class="row justify-content-between align-items-end centerInfo">
            <div class="col-lg-4">
             
                <ul class="list-group mb-3">
                    
                    <li class="list-group-item d-flex justify-content-between align-items-center subtitle">
                        Total Reviews
                        <span class="badge bg-primary rounded-pill">
                            <%=center.reviews.length %>
                        </span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center subtitle">
                        Average Rating
                        <span class="badge bg-primary rounded-pill">
                            <%=avgRating %>
                        </span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center subtitle">
                        Easy to Reach
                        <span>
                            <span> Yes </span>
                            <span class="badge bg-success rounded-pill">
                                <%=easyToFind %> 
                               </span>
                            <span> No </span>
                            <span class="badge bg-danger rounded-pill">
                                <%=notEasyToFind %> 
                            </span>
                        </span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center subtitle">
                        Crowded
                        <span>
                            <span> Yes </span>
                            <span class="badge bg-success rounded-pill">
                                <%=Crowded  %> 
                            </span>
                            <span> No </span>
                            <span class="badge bg-danger rounded-pill">
                                <%=notCrowded  %> 
                            </span>
                        </span>
                    </li>
                </ul>
            </div>
            
            <div id='map' class="col-lg-8 container-fluid" style='width:60%; height: 180px;'>
            </div>
        </div>

        <div class="row justify-content-between align-items-center">
            <div class="col-5"><a href="/centers/<%=center._id %>/addReview" class="btn btn-primary"><i class="fas fa-plus"></i><span style="padding-left: 4px">Add Review</span> </a>
            </div>
        </div>


    </div>
    <div class="container">
        <div class="list-group my-3">
            <%if(center.reviews.length==0{) %> 
                <div class="list-group-item list-group-item-action" aria-current="true">
                    <div class="d-flex w-100 justify-content-between">

                        <h5 class="mb-1 title">
                            No reviews available yet !
                        </h5>

                        <small class="text-muted">Add a one now </small>

                    </div>
                    <% } %> 
            <% for(let review of center.reviews){ %>
                <div class="list-group-item list-group-item-action" aria-current="true">
                    <div class="d-flex w-100 justify-content-between">

                        <h5 class="mb-1 title">
                            <%=review.title%>
                        </h5>

                        <small class="text-muted"><%= review.upvotes %> Upvotes | Posted <%= review.date.getDate() %>/<%= review.date.getMonth() %>/<%= review.date.getFullYear() %></small>

                    </div>
                    <p class="mb-1 subtitle">
                        <%=review.comment %>
                    </p>
                    <div class="d-flex w-100 justify-content-between">
                        <span class="d-flex w-100 gap-3 justify-content-end">
                            <form   action="/centers/<%= center._id %>/upvote/<%= review._id %>?_method=PUT" method="POST">
                                <button type="submit" class="btn btn-light bs-d"><i class="far fa-thumbs-up"></i> Upvote</button>
                            </form>
                            <form action="/centers/<%= center._id %>/report/<%= review._id %>?_method=PUT" method="POST">
                                <button type="submit" class="btn btn-light bs-s"><i class="far fa-flag"></i> report</button>
                            </form>
                        </span>
                    </div> 
                </div>
                <% } %>

        </div>
    </div>
    <script>
        const center = <%- JSON.stringify(center) %>
    </script>
    <script src='/mapConfig.js'></script>

    <%- include ("partials/footer") %>