<%- include ("partials/header") %>
    <div class="container">


        <h1 class="text-center" style="font-size: 600% ;">Admin Dashboard</h1>
        <hr>

        <div class="row align-items-center justify-content-around ">

            <div class="col-10 col-lg-8 ">
                <div class="row container" style="background-color:#66788ab2 ; border-radius: 5px; margin-bottom: 5px; padding-top: 20px;">
                    <a href="reports">
                        <h2 style="color: #f6fbef;">You have <span>
                                <%= reviews.length %>
                            </span>Reported Reviews </h2>
                    </a>
                    <div style="background-color: #f6fbef; border-radius: 5px; margin-bottom: 24px;">
                        <ul>
                            <%for(let review of reviews){ %>
                                <li>
                                    <h3>
                                        <%= review.title %>
                                    </h3>
                                    <h4>
                                        <%= review.comment %>
                                    </h4>
                                    <div class="container-fluid">
                                        <div class="row">
                                            <div class="col col-sm-auto mb-2">
                                                <form action="/centers/<%= review.vaccination_center %>/delete/<%= review._id %>?_method=DELETE" method="POST">
                                                    <button type="submit" class='btn btn-primary'>Remove Post</button>
                                                </form>
                                            </div>
                                            <div class="col-sm-auto">
                                                <form action="/centers/<%= review.vaccination_center %>/ignore/<%= review._id %>?_method=PUT" method="POST">
                                                    <button type="submit" class='btn btn-av'>Ignore</button>
                                                </form>
                                            </div>
                                        </div>
                                        
                                    </div>
                                </li>
                                <hr>
                                <% }%>
                        </ul>
                    </div>
                    
                    
                </div>
                <div class="row container justify-content-around">
                    <button class="col-5 btn" style="background-color: #66788A;">
                        <a href="/modHome/logout">
                            <span style="color: white" ><i style="margin-left: 5px;" class="fas fa-sign-out-alt"></i> Logout</span>
                        </a>
                    </button>
                    <button class="col-5 btn" style="background-color: #66788A; margin-left: 5px;">
                        <a href="/centers">
                            <span style="color: white">Add or Remove Centers</span>
                        </a>
                    </button>
                </div>
                
            </div>
        </div>

    </div>





    <%- include ("partials/footer2") %>